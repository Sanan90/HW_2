<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonbaku">
    >

    <ImageView
        android:id="@+id/imageWeather"
        android:layout_width="@dimen/imageWeatherWidth"
        android:layout_height="@dimen/imageWeatherWidth"
        app:layout_constraintBottom_toTopOf="@id/city"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/_11" />


    <TextView
        android:id="@+id/city"
        android:layout_width="@dimen/cityWidth"
        android:layout_height="@dimen/cityHeight"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CA2828"
        android:text="@string/city2"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageWeather" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="@dimen/temperatureWidth"
        android:layout_height="@dimen/temperatureHeight"
        android:autoSizeTextType="uniform"
        android:text="18"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@id/city"
        app:layout_constraintLeft_toRightOf="@id/imageWeather" />

    <TextView
        android:id="@+id/celsius"
        android:layout_width="@dimen/celsiusWidth"
        android:layout_height="@dimen/celsiusHeight"
        android:autoSizeTextType="uniform"
        android:text="C"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@id/city"
        app:layout_constraintLeft_toRightOf="@id/temperature" />


</androidx.constraintlayout.widget.ConstraintLayout>